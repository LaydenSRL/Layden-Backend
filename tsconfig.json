{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}